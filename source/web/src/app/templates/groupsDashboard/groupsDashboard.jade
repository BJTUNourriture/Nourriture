md-content.body-dashboard-group
	div(layout="column", layout-fill).flex
		div.flex
			div(layout="column" flex layout-align="start center")
				div(flex="none").title-register-container 
					span.title-register-md Groups Dashboard
				div.body-dashboard-group.flex
					section(layout="column", layout-align="start center", layout-margin)
						md-content.body-dashboard-group
							md-toolbar.flex
								section(layout="row", layout-align="start start")
									div(style="max-width:200px;").hide-gt-sm
										form(ng-submit="groupsDashboard.searchGroups();")
											md-input-container.flex
												label Search a Group
												input(ng-model="search" name="search")
									form(ng-submit="groupsDashboard.searchGroups();").flex.hide-sm
										md-input-container(flex="50")
											label Search a Group
											input(ng-model="search" name="search")
									ng-md-icon(type="submit" icon="search" style="cursor: pointer;"  ng-click="groupsDashboard.searchGroups();")
							md-content.body-dashboard-group-md-content.flex.ng-cloak
								section(layout="column" layout-align="start center" flex ng-if="groupsDashboard.retrievingGroups")
									md-progress-circular(md-mode="indeterminate")
								md-grid-list(md-cols-gt-md="6", md-cols-md='3', md-cols-sm='2', md-gutter='12px', md-row-height='1:1' ng-if="!groupsDashboard.retrievingGroups")
									md-grid-tile.body-dashboard-group-grid-tile(ng-mouseenter="group.mouseEnter = true" ng-mouseleave="group.mouseEnter = false" ng-repeat="group in groupsDashboard.groups" ui-sref="main.group-page({id: group._id})")
										figure
											img(ng-src="{{ group.pictures[0].thumbnail_url }}" width="100%" height="100%")
										md-grid-tile-footer.body-dashboard-group-grid-tile-footer
											span(ng-if="!group.mouseEnter").show-on-enter
												h2 {{ group.name  | limitTo: 12 }}
											span(ng-if="group.mouseEnter").show-on-enter
												h2 {{ group.name }}
							div.flex.t-center
								md-button(ui-sref="main.create-group").md-raised Add a new Group

		include ../footer/footer.jade

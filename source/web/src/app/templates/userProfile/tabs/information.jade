div(layout="column" layout-align="center center" layout-fill ng-controller="informationsUserProfileController as informationsUserProfile")
    md-content(flex)
        h1.t-center Informations
        md-list(flex)
            md-list-item.md-3-line.md-no-proxy
                .md-list-item-text
                    p <span class='bold'>Username:</span> {{informationsUserProfile.data.username}}
                md-divider
            md-list-item.md-3-line.md-no-proxy
                .md-list-item-text
                    p <span class='bold'>Gender:</span> {{informationsUserProfile.data.gender}}
                md-divider
            md-list-item.md-3-line.md-no-proxy
                .md-list-item-text
                    p.
                        <span class='bold'>Description: </span> {{informationsUserProfile.data.description}}
                md-divider
            //md-list-item.md-3-line.md-no-proxy
                .md-list-item-text
                    p <span class='bold'>Badges:</span>
                      ul(ng-repeat='badge in informationsUserProfile.data.badge | limitTo: 10')
                        li {{badge}}
                md-divider
            md-list-item.md-3-line.md-no-proxy
                .md-list-item-text
                    p
                      span.bold Ingredients liked with numbers:
                      span(ng-repeat='ingredient in informationsUserProfile.data.like | limitTo:10') {{ingredient.name_ingredient}},
                      span(ng-click="informationsUserProfile.ingredientLiked = !informationsUserProfile.ingredientLiked" ng-hide="informationsUserProfile.ingredientLiked" ng-if="informationsUserProfile.data.like.length > 10") more...
                      span(class="show-more" ng-show="informationsUserProfile.ingredientLiked" ng-repeat='ingredient in informationsUserProfile.data.like | limitTo:informationsUserProfile.data.like.length - 10:10' ng-animate="{show: 'fadeIn', hide:'fadeOut'}") {{ingredient.name_ingredient}},
                      span(ng-show="informationsUserProfile.ingredientLiked" ng-click="informationsUserProfile.ingredientLiked = !informationsUserProfile.ingredientLiked") less

                md-divider
            //md-list-item.md-3-line.md-no-proxy
                .md-list-item-text
                    p <span class='bold'>Ingredients disliked:</span>
                      ul(ng-repeat='ingredient in informationsUserProfile.data.dislike | limitTo: 10')
                        li {{ingredient.name_ingredient}}
                md-divider
            //md-list-item.md-3-line.md-no-proxy
                .md-list-item-text
                    p <span class='bold'>Religion:</span>
                      ul(ng-repeat='religion in informationsUserProfile.data.religion | limitTo: 10')
                        li {{religion.name}}
                md-divider
            //md-list-item.md-3-line.md-no-proxy
                .md-list-item-text
                    p <span class='bold'>Allergies:</span>
                      ul(ng-repeat='alergy in informationsUserProfile.data.alergy | limitTo: 10')
                        li {{alergy.name}}
                md-divider
            //md-list-item.md-3-line.md-no-proxy
                .md-list-item-text
                    p <span class='bold'>Followers:</span>
                      ul(ng-repeat='follower in informationsUserProfile.data.followed_by | limitTo: 10')
                        li {{follower.username}}
                md-divider
            //md-list-item.md-3-line.md-no-proxy
                .md-list-item-text
                    p <span class='bold'>Following:</span>
                      ul(ng-repeat='following in informationsUserProfile.data.follow | limitTo: 10')
                        li {{following.username}}
                md-divider
            //md-list-item.md-3-line.md-no-proxy
                .md-list-item-text
                    p <span class='bold'>Groups:</span>
                      ul(ng-repeat='group in informationsUserProfile.data.joined_groups | limitTo: 10')

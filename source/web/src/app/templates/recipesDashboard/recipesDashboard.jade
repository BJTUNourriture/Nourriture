md-content.body-dashboard-recipe
	div(layout="column", layout-fill).flex
		div.flex
			div(layout="column" flex layout-align="start center")
				div(flex="none").title-register-container 
					span.title-register-md Recipes Dashboard
				div.body-dashboard-recipe.flex
					section(layout="column", layout-align="start center", layout-margin)
						md-content.body-dashboard-recipe
							md-toolbar.flex
								section(layout="row", layout-align="start start")
									div(style="max-width:200px;").hide-gt-sm
										form(ng-submit="")
											md-input-container.flex
												label Search a Recipe
												input(ng-model="search" name="search")
									form(ng-submit="").flex.hide-sm
										md-input-container(flex="50")
											label Search a Recipe
											input(ng-model="search" name="search")
									ng-md-icon(type="submit" icon="search" style="cursor: pointer;" ng-click="")
							md-content.flex.body-dashboard-recipe-md-content
								md-grid-list(md-cols-gt-md="6", md-cols-md='4', md-cols-sm='2', md-gutter='12px', md-row-height='1:1').flex
									md-grid-tile.body-dashboard-recipe-grid-tile(ng-mouseenter="recipesDashboard.mouseOnTileSet(true)" ng-mouseleave="recipesDashboard.mouseOnTileSet(false)" ng-repeat="recipe in recipesDashboard.recipes")
										figure
											img(ng-src="assets/images/homepage_bg/bg.png" width="100%" height="100%")
										md-grid-tile-footer.body-dashboard-recipe-grid-tile-footer
											span(ng-if="!recipesDashboard.mouseOnTile").show-on-enter
												h2 {{ recipe.title  | limitTo: 12 }}
											span(ng-if="recipesDashboard.mouseOnTile").show-on-enter
												p Author : {{ recipe.author_name }}
		include ../footer/footer.jade
